<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ThinkCraft</title>
    @Styles.Render("~/Styles/core")
    @Scripts.Render("~/Scripts/modernizr")
</head>
<body>
    <header>
    </header>
    <section id="body">
        @RenderBody()
    </section>
    <footer>
        <p>&copy; @DateTime.Now.Year - ThinkCraft</p>
    </footer>

    @Scripts.Render("~/Scripts/core")
    @RenderSection("PageLevelScripts", required: false)
</body>
</html>
